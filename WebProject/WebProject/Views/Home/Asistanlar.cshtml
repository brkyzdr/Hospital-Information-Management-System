@using WebProject.Models
@model IEnumerable<Asistanlar>

@{
    ViewBag.Title = "Asistanlar";
}

<!DOCTYPE html>
<html>
<head>
    <title>Asistanlar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Asistanlar</h1>

        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Mail</th>
                    <th>Telefon</th>
                    <th>Adres</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var assistant in Model)
                {
                    <tr>
                        <td>@assistant.Ad</td>
                        <td>@assistant.Soyad</td>
                        <td>@assistant.Mail</td>
                        <td>@assistant.Telefon</td>
                        <td>@assistant.Adres</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
