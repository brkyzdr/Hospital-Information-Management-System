@{
    Layout = null;
}
@{
    ViewBag.Title = "Giris";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS (isteğe bağlı) -->
    <style>
        .login-container {
            max-width: 400px;
            margin: 100px auto;
            padding: 30px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: rgba(169, 169, 169, 0.5); /* Gri şeffaf arka plan */
        }

        .login-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .login-form {
            width: 100%;
        }

        .btn-primary {
            background-color: black; /* Siyah buton rengi */
            border-color: black; /* Buton kenarını siyah yap */
        }

            .btn-primary:hover {
                background-color: #333; /* Buton hover durumu için koyu siyah */
                border-color: #333; /* Hoverda kenar rengi değişsin */
            }

            .btn-primary:active {
                background-color: #555; /* Butona tıklandığında gri renk */
                border-color: #555; /* Kenarı da gri yap */
            }
    </style>
</head>
<body>

    <div class="login-container">
        <div class="login-header">
            <h2>Giriş Yap</h2>
            <p>Hesabınıza giriş yapın</p>
        </div>

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }

        <form class="login-form" action="/Home/Giris" method="post">
            <div class="mb-3">
                <label for="username" class="form-label">Kullanıcı Adı</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Kullanıcı adınızı girin" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Şifre</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Şifrenizi girin" required>
            </div>
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Giriş Yap</button>
            </div>
        </form>
    </div>

    <!-- Bootstrap JS (Opsiyonel: eğer sayfada interaktif öğeler varsa) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
