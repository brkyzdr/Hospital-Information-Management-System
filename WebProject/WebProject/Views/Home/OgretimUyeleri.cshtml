@{
    ViewBag.Title = "Öğretim Üyeleri";
}

@using WebProject.Models
@model IEnumerable<OgretimUyeleri>



<!DOCTYPE html>
<html>
<head>
    <title>Öğretim Üyeleri</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Öğretim Üyeleri</h1>

        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Mail</th>
                    <th>Telefon</th>
                    <th>Adres</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ogretimUyeleri in Model)
                {
                    <tr>
                        <td>@ogretimUyeleri.Ad</td>
                        <td>@ogretimUyeleri.Soyad</td>
                        <td>@ogretimUyeleri.Mail</td>
                        <td>@ogretimUyeleri.Telefon</td>
                        <td>@ogretimUyeleri.Adres</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
