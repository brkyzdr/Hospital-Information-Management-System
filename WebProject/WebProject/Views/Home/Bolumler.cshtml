
@using WebProject.Models.Bolumler

@model Bolum

@{
    ViewBag.Title = "Bölümler";
}


<!DOCTYPE html>
<html>
<head>
    <title>Bölümler</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Pediatri Bölümleri</h1>

        <div class="row">

            <!-- Çocuk Acil -->
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Çocuk Acil</h5>
                        @foreach (var cocukAcil in Model.CocukAcil)
                        {
                            <p><strong>Öğretim Üyesi:</strong> @cocukAcil.OgretimUyesi</p>
                            <p><strong>Nöbetçi Asistan:</strong> @cocukAcil.NobetciAsistan</p>
                            <p><strong>Yatak Sayısı:</strong> @cocukAcil.YatakSayisi</p>
                            <p><strong>Boş Yatak Sayısı:</strong> @cocukAcil.BosYatakSayisi</p>
                        }


                    </div>
                </div>
            </div>
            <!-- Çocuk Yoğun Bakım -->
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Çocuk Yoğun Bakım</h5>
                        @foreach (var cocukYogunBakim in Model.CocukYogunBakim)
                        {
                            <p><strong> Öğretim Üyesi:</strong> @cocukYogunBakim.OgretimUyesi</p>
                            <p><strong> Nöbetçi Asistan:</strong> @cocukYogunBakim.NobetciAsistan</p>
                            <p><strong> Yatak Sayısı:</strong> @cocukYogunBakim.YatakSayisi</p>
                            <p><strong> Boş Yatak Sayısı:</strong> @cocukYogunBakim.BosYatakSayisi</p>
                        }
                    </div>
                </div>
            </div>
            <!-- Çocuk Hematolojisi ve Onkolojisi -->
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Çocuk Hematolojisi ve Onkolojisi</h5>
                        @foreach (var cocukHematolojisiVeOnkolojisi in Model.CocukHematolojisiVeOnkolojisi)
                        {
                            <p><strong> Öğretim Üyesi:</strong> @cocukHematolojisiVeOnkolojisi.OgretimUyesi</p>
                            <p><strong> Nöbetçi Asistan:</strong> @cocukHematolojisiVeOnkolojisi.NobetciAsistan</p>
                            <p><strong> Yatak Sayısı:</strong> @cocukHematolojisiVeOnkolojisi.YatakSayisi</p>
                            <p><strong> Boş Yatak Sayısı:</strong> @cocukHematolojisiVeOnkolojisi.BosYatakSayisi</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
