@{
    ViewBag.Title = "Randevular";
}
@using WebProject.Models
@model IEnumerable<Randevular>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Randevular</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa; /* Açık gri arka plan */
        }

        .table-container {
            margin-top: 30px;
            padding: 20px;
            background-color: #fff; /* Beyaz arka plan */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Hafif gölge */
            border-radius: 8px;
        }

        .table th {
            background-color: #343a40; /* Siyah başlık */
            color: #fff; /* Beyaz metin */
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="table-container">
            <h2 class="text-center mb-4">Randevular</h2>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Randevu ID</th>
                        <th>Randevu Tarihi</th>
                        <th>Asistan</th>
                        <th>Öğretim Üyesi</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var randevular in Model)
                    {
                        <tr>
                            <td>@randevular.ID</td>
                            <td>@randevular.RandevuTarihi.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@randevular.RandevuAsistan</td>
                            <td>@randevular.RandevuOgretimUyesi</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
